<!--01-Mar-2019 Lovedeep Singh  Lightning sheet is enabled for this VF page to enablee lightning    -->
<apex:page standardController="Lead" extensions="GLILeadStatusMassUpdateController" recordSetVar="leads" lightningStylesheets="true">
    
    <apex:sectionHeader title="{!$Label.GLILeadStatusMassUpdate_Page_Title}" />
    
    <apex:form >
        
		<!-- This tag is used to display error messages generated by the underlying controller -->
        <apex:pageMessages />
        
		<!-- Mass Update Section -->
        <apex:outputPanel layout="block">
            <apex:outputText style="font-weight: bold;" value="{!$Label.GLILeadStatusMassUpdate_Page_Update_Section_Title}" />
            <apex:outputText style="border-color: #cc0000;border-style: solid;border-width: 0 0 0 3px;float: right;padding-left: 5px;" value="{!$Label.GLILeadStatusMassUpdate_Page_Required_Info_Label}" />
        </apex:outputPanel>
        <apex:pageBlock >
            
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!Save}" disabled="{!if(SelectedLeadList.size==0,true,false)}" value="{!$Label.GLILeadStatusMassUpdate_Page_Save_Button_Label}" />
                <apex:commandButton action="{!Cancel}" value="{!$Label.GLILeadStatusMassUpdate_Page_Cancel_Button_Label}" />
            </apex:pageBlockButtons>
            
            <apex:outputPanel layout="block">
                <apex:pageBlockSection columns="1" rendered="{!if(SelectedLeadList.size==0,false,true)}">
                    <apex:inputField label="{!$Label.GLILeadStatusMassUpdate_Page_NewStatus_Label}" required="true" value="{!LeadUpdate.Status}" />
                    <apex:inputField label="{!$Label.GLILeadStatusMassUpdate_Page_NewDQReason_Label}" required="true" value="{!LeadUpdate.TRWayLeadMgmt__Panorama_DQ_Reason__c}" />
                    <apex:inputField label="{!$Label.GLILeadStatusMassUpdate_Page_NewDQJustification_Label}" value="{!LeadUpdate.Disqualification_Justification__c}" />
                    <apex:inputField label="{!$Label.GLILeadStatusMassUpdate_Page_NewCompetitor_Label}" required="true" value="{!LeadUpdate.TRWayLeadMgmt__Panorama_Competitor__c}" />
                </apex:pageBlockSection>
                <br />
                <apex:outputText rendered="{!if(SelectedLeadList.size==0,true,false)}" value="{!$Label.GLILeadStatusMassUpdate_Page_No_Records_Selected_Msg}" />
            </apex:outputPanel>
            
        </apex:pageBlock>
        
    </apex:form>
    
</apex:page>