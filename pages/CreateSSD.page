                document.getElementById("mainPg:mainFrm:entryBlock:entryFrmButtons:bottom:cancelBtn").disabled = true;
            if(document.getElementById("mainPg:mainFrm:entryBlock:entryFrmButtons:saveBtn")!=null)
                document.getElementById("mainPg:mainFrm:entryBlock:entryFrmButtons:saveBtn").value = 'Submitting...';
