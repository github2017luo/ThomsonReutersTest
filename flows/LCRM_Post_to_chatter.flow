    <apiVersion>49.0</apiVersion>
    <decisions>
        <name>Decision_to_call_insert_or_update_opty_TM_Chatter_post</name>
        <label>Decision to call insert or update opty TM Chatter post</label>
        <locationX>300</locationX>
        <locationY>88</locationY>
        <defaultConnectorLabel>[Default Outcome]</defaultConnectorLabel>
        <rules>
            <name>Insert_Opty_Team</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varInsertOrUpdate</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Insert</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>LCRM_Post_to_Chatter</targetReference>
            </connector>
            <label>Insert Opty Team</label>
        </rules>
        <rules>
            <name>Update_Flow</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varInsertOrUpdate</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Update</stringValue>
                </rightValue>
            </conditions>
            <label>Update_Flow</label>
        </rules>
        <rules>
            <name>Update_Status</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varUpdateStatus</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Post_to_chatter_status_updated</targetReference>
            </connector>
            <label>Update_Status</label>
        </rules>
        <rules>
            <name>Expiration_warning</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varExpirationWarning</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <label>Expiration warning</label>
        </rules>
        <rules>
            <name>Negotiate_Contract_Notification</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varStageName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Negotiate Contract</stringValue>
                </rightValue>
            </conditions>
            <label>Negotiate Contract Notification</label>
        </rules>
    </decisions>
